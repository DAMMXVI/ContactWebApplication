@model ContactWebApplication.Models.Contact
@using ContactWebApplication.Resources

<title>@Resource.AddContactHeader</title>
<div class="page-header"><h1>@Resource.AddContactHeader</h1></div>
<hr />
<div class="col-md-6">
    @using (Html.BeginForm("AddContact", "Contact", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <br />
        <div class="form-group">
            @Html.LabelFor(m => m.fullName, new { @style = "font-weight:bold;" })
            @Html.TextBoxFor(m => m.fullName, new { @class = "form-control", placeholder = Resource.fullName })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.phoneNumber, new { @style = "font-weight:bold;" })
            @Html.TextBoxFor(m => m.phoneNumber, new { @class = "form-control", placeholder = Resource.phoneNumber })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.address, new { @style = "font-weight:bold;" })
            @Html.TextBoxFor(m => m.address, new { @class = "form-control", placeholder = Resource.address })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.note, new { @style = "font-weight:bold;" })
            @Html.TextAreaFor(m => m.note, new { @class = "form-control", placeholder = Resource.AddNote, rows = "4" })
        </div>

        @Html.ValidationSummary(false, "", new { @class = "alert-danger" })

        <input type="submit" class="btn btn-success" value=@Resource.Add />
    }
</div>
